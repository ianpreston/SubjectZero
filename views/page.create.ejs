<h2>Create Page</h2>

<% if (errors) { %>
    <% errors.forEach(function(e) { %>
    <strong>Error: <%= e %>
    <% }); %>
<% } %>

<form action="/page/create" method="POST">
Page Path: <input type="text" name="page[path]" value="<%= page.path || '/index.html' %>">
<br>

Page Title: <input type="text" name="page[title]" value="<%= page.title || '' %>">
<br>

Template: <select name="page[template_id]" value="<%= page.template %>">
<% templates.forEach(function(t) { %>
    <option value="<%= t.id %>"><%= t.template_name %></option>
<% }); %>
</select>
<br>

Page Body:
<br>

<textarea name="page[body]" rows=20 cols=120><%= page.body || '' %></textarea>
<br>

<input type="submit" value="Create">
</form>
